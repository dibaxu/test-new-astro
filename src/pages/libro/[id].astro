---
import Layout from '../../layouts/Layout.astro';
import { SHOW_BUY_BUTTON } from 'astro:env/server';
import {getCollection, render} from "astro:content"
import BuyButton from '../../components/BuyButton.astro';
import BookScore from '../../components/BookScore.astro';


export async function getStaticPaths(){
  const books = await getCollection("books")
  return books.map( (book) => ({
    params: { id: book.slug},
    props: { book}
  }))
}

const {book} = Astro.props
const {data, slug} = book
const {title, img, description, author, readtime, buy } = data
const { Content } = await render(book)
export const prerender = true
---
<Layout title={`${title} - Dev Books`}>
<div class='flex gap-12'>
  <aside class='flex flex-col items-center gap-4'>
    <a href="/" class='hover:underline opacity-70'>⬅️volver atrás </a>
    <img transition:name={`img-${slug}`} src={`/${img}`} class='rounded w-72 h-auto'alt={title}>
    <BookScore server:defer >
      <span slot='fallback' class='text-xs opacity-70' >Cargando puntuación</span>
    </BookScore>
    {
      SHOW_BUY_BUTTON && <BuyButton buy={buy} server:defer />
    }
  </aside>
  <main class='max-w-2xl'>
    <h1 transition:name={`title-${slug}`} class='text-4xl font-bold mb-4'>{title}</h1>
    <div class='prose prose-invert'>
      <Content />
    </div>
  </main>
</div>
</Layout>

